-->
<div class="flash-msg">
  <!--
        @TODO: 플래시 메시지를 표시하는 코드를 여기에 추가
    -->>
  <% if (flashMessages) { %>
    <% if (flashMessages.success) { %>
      <div class="alert alert-success flash success">
        <!-- success 메시지 출력 -->
        <%= flashMessages.success %>
      </div>
    <% } else if (flashMessages.error) { %>
      <div class="alert alert-danger flash error">
        <!-- error 메시지 출력 -->
        <%= flashMessages.error %>
      </div>
    <% } %>
  <% } %>
</div>
